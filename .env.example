OBSIDIAN_VAULT_ROOT=/path/to/your/obsidian/vault
DEFAULT_VAULT=your-default-vault
DEFAULT_NOTE_DIR=your-default-note-dir
DEFAULT_NOTE_AUTHOR=your-default-note-author
PYTHONPATH=src

# Vector Search Configuration (Optional)
# Set to "true" to enable semantic vector search functionality
# Accepts: true, false (case-insensitive)
VECTOR_SEARCH_ENABLED=false

# Custom path for vector database (optional)
# If not set, defaults to {vault}/.minerva/vectors.db
# VECTOR_DB_PATH=/custom/path/to/vectors.db

# Embedding model for text vectorization (optional)
# Defaults to "all-MiniLM-L6-v2" if not specified
# EMBEDDING_MODEL=all-MiniLM-L6-v2

# Automatic Index Configuration (Optional)
# Set to "true" to enable automatic vector index updates when notes are modified
# Accepts: true, false (case-insensitive)
AUTO_INDEX_ENABLED=true

# Strategy for automatic indexing when notes are created/modified
# Options: immediate, batch, background
# - immediate: Update index immediately (default)
# - batch: Queue updates for batch processing
# - background: Process updates in background tasks
AUTO_INDEX_STRATEGY=immediate
